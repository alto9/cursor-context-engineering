{
  "name": "glam",
  "displayName": "Glam - Context Engineering for Agentic Development",
  "description": "VSCode extension that helps engineers use proper context engineering to build and maintain software using Agentic development practices",
  "version": "0.1.0",
  "publisher": "alto9",
  "repository": {
    "type": "git",
    "url": "https://github.com/alto9/cursor-context-engineering",
    "directory": "packages/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/alto9/cursor-context-engineering/issues"
  },
  "homepage": "https://github.com/alto9/cursor-context-engineering#readme",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=22.14.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "glam.startSession",
        "title": "Glam: Start Design Session"
      },
      {
        "command": "glam.distillSession",
        "title": "Glam: Distill Session into Stories and Tasks"
      },
      {
        "command": "glam.buildStory",
        "title": "Glam: Build Story Implementation"
      },
      {
        "command": "glam.openStudio",
        "title": "Glam: Open Glam Studio"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder && resourceFilename == sessions",
          "command": "glam.startSession",
          "group": "glam@1"
        },
        {
          "when": "resourceExtname == .md && resourcePath =~ /.*\\.session\\.md$/",
          "command": "glam.distillSession",
          "group": "glam@1"
        },
        {
          "when": "resourceExtname == .md && resourcePath =~ /.*\\.story\\.md$/",
          "command": "glam.buildStory",
          "group": "glam@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack && npm run build:webview",
    "build": "webpack && npm run build:webview",
    "watch": "concurrently \"webpack --watch\" \"npm run dev:webview\"",
    "package": "webpack --mode production --devtool hidden-source-map && npm run build:webview",
    "build:webview": "esbuild src/webview/studio/index.tsx --bundle --outfile=media/studio/main.js --format=iife --platform=browser --minify",
    "dev:webview": "esbuild src/webview/studio/index.tsx --bundle --outfile=media/studio/main.js --format=iife --platform=browser --watch",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts,tsx",
    "test": "vitest run",
    "clean": "rm -rf dist out *.vsix"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.0",
    "vitest": "^2.0.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yaml": "^2.6.0"
  }
}

