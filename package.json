{
  "name": "glam-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Glam - Context Engineering for Agentic Development",
  "repository": {
    "type": "git",
    "url": "https://github.com/alto9/cursor-context-engineering"
  },
  "bugs": {
    "url": "https://github.com/alto9/cursor-context-engineering/issues"
  },
  "homepage": "https://github.com/alto9/cursor-context-engineering#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "compile": "npm run compile --workspaces",
    "watch": "npm run watch --workspaces --if-present",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules packages/*/node_modules",
    "vscode:package": "cd packages/vscode-extension && npm run package && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=10.0.0"
  }
}
